[core]
	editor = vim
[user]
	name = Francesco Tassi
	email = tassi.francesco@gmail.com
[rerere]
	enabled = true
[commit]
	verbose = true
[alias]
    cleanup-branches = !git remote prune origin && git branch --merged | egrep -v '(^\\*|master|main|develop)' | xargs git branch -d
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    f = fetch -p
    st = status -sb
    a = add -p
    last = log -1 HEAD --stat
    latest-tag = describe --abbrev=0 --tags
    fd = "!bash -c \"git commit -t <(echo '[fast-deploy][no-build] ')\""
[push]
	autoSetupRemote = true

[includeIf "gitdir:~/workspace/madisoft/"]
	path = ~/.config/git/config-madisoft
