#!/usr/bin/env bash
cat <<'EOF'
tmux cheatsheet (custom config)
═══════════════════════════════
prefix = Ctrl-Space

SESSIONI
  tmux new -s nome     Nuova sessione
  tmux a -t nome       Attach
  tmux new -s vis -t nome  Sessione collegata (vista indipendente)
  tmux ls              Lista sessioni
  prefix d             Detach
  prefix s             Lista sessioni (dentro tmux)
  prefix $             Rinomina sessione
  tmux kill-session -t nome  Chiudi sessione (e viste collegate)
  tmux kill-server     Chiudi tutto

FINESTRE (tab)
  prefix c             Nuova finestra
  prefix ,             Rinomina finestra
  prefix 1-9           Vai a finestra N
  prefix n / p         Finestra succ / prec
  prefix .             Sposta finestra (digita posizione)
  prefix &             Chiudi finestra

PANE
  prefix |             Split verticale
  prefix -             Split orizzontale
  Ctrl-hjkl            Naviga tra pane (no prefix!)
  prefix x             Chiudi pane
  prefix z             Zoom toggle (fullscreen)
  prefix space         Cicla layout
  prefix Ctrl-frecce   Resize di 1
  prefix Alt-frecce    Resize di 5
  :swap-window -t N    Scambia finestra con N

COPY MODE
  prefix [             Entra in copy mode
  scroll mouse         Entra in copy mode
  / ?                  Cerca avanti / indietro
  v                    Inizia selezione
  y                    Copia (→ clipboard sistema)
  q                    Esci
  Ctrl-Shift-v         Incolla (paste Alacritty)

ALTRO
  prefix Ctrl-l        Clear screen
  prefix h             Questo cheatsheet
EOF
